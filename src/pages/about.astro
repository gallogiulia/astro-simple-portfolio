---
import Layout from '../layouts/Layout.astro';

const title = 'About — Giulia Gallo';
const siteName = 'Giulia`s Portfolio';
const siteDescription = 'Showcasing professional work, projects, and collaborations.';
---

<Layout title={title} siteName={siteName} siteDescription={siteDescription}>
  <section class="max-w-3xl mx-auto py-16 space-y-6">
    <h1 class="text-4xl font-bold">About Me</h1>
    <p>
      I’m Giulia Gallo, a Data & AI enthusiast, cat lover, lawn bowler, and gamer.
      This is my professional space online, where I share my projects and work.
    </p>
  </section>
</Layout>
